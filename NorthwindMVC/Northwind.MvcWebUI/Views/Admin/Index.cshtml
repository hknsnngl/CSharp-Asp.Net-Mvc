@model System.Collections.Generic.List<Northwind.Entities.Product>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Product List</h2>
@Html.ActionLink("CreateNew", "CreateNew" )
<table>
    <tr>
        <td>Product Id</td>
        <td>Product Name</td>
        <td>Unit Price</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@Html.ActionLink("Edit", "Edit", new { productId = product.ProductID })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { productId = product.ProductID })</td>
        </tr>
    }
</table>